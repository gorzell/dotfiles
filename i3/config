set $mod Mod4

# Set font used to SourceCodePro because it is easy to read.
font pango:Source Code Variable 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec ~/.local/bin/kitty

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
bindsym $mod+x exec i3lock
bindsym $mod+Shift+f exec firefox
bindsym $mod+n exec nm-connection-editor
# 1password X is available for Firefox now, so this is only required for file access.
# bindsym $mod+p exec chromium-browser --allow-file-access-from-files

